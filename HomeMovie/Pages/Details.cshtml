@page
@model HomeMovie.Pages.DetailsModel
@{
    ViewData["Title"] = "Movie Details";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Model.MovieId.Name</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Режисер: @Model.MovieId.Producer</h4><hr/>
                        <h4 class="cardTextLeftFloating">Жанр: @Model.MovieId.Genre</h4><hr />
                        <h4 class="cardTextLeftFloating">Описание: <p>@Model.MovieId.Description</p></h4><hr />
                        <div class="dropdown">
                          <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            Сеансы фильма
                          </a>
                          <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            @foreach(var item in Model.MovieId.Session)
                            {
                                <li><a class="dropdown-item" href="#">@item</a></li>
                            }                            
                          </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>